{
  "name": "cosmic-vue",
  "version": "0.0.29-alpha.3",
  "scripts": {
    "watch": "run-p build:watch vite",
    "dev": "vite",
    "build": "npm run build:components && npm run build:plugin",
    "preview": "vite preview",
    "build:components": "vite build",
    "build:plugin": "tsc --project ./plugin/tsconfig.json",
    "build:watch": "npm run build:components:watch && npm run build:plugin:watch",
    "build:components:watch": "vite build --watch",
    "build:plugin:watch": "tsc --project ./plugin/tsconfig.json -w",
    "typecheck": "vue-tsc --noEmit -p ./tsconfig.json"
  },
  "files": [
    "components",
    "plugin",
    "*.md",
    "*.config.js",
    "dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./plugin": "./plugin/dist/rollup-plugin-vue-cosmic.js",
    "./style.css": "./dist/style.css"
  },
  "dependencies": {
    "@babel/types": "^7.17.0",
    "lodash.kebabcase": "^4.1.1",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.0.0",
    "cosmic-common": "workspace:*",
    "cosmic-icon": "workspace:*",
    "cosmic-ui-alpha": "workspace:*",
    "cosmic-vue": "workspace:*",
    "npm-run-all": "~4.1.5",
    "unplugin-icons": "~0.13.1",
    "unplugin-vue-components": "~0.17.18",
    "vite": "^2.7.2",
    "vite-dts": "^1.0.4"
  }
}
